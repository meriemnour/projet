{% extends 'base_back.html.twig' %}
{% block title %}Food-X - Utilisateurs {% endblock %}

{% block body%}
    {% for message in app.flashes('message') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Réclamations</h1>
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Gestion des Réclamations</h6>
            </div>
            <div class="card-body">
                <table>
                    <td style="  vertical-align:top ; ">
                        <table style="margin-right: 20px ; ">
                            <form action="" method="POST">

                                <th>Trier par :  </th>
                                <th><a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
                                       style="height: 35px; padding: 6px 15px; " href="{{ path('triDateReclamation') }}">Date reclamation</a></th>
                                <th><a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
                                       style="height: 35px; padding: 6px 15px; " href="{{ path('triTypeReclamation') }}">Type reclamation</a></th>
                            </form>
                        </table>
                    </td>

                    <table style="margin-right: 20px ; ">

                    </table>
                    <hr>
                    </tr>

                    <hr>
                    <td>
                        <div style="width: 100%; overflow: auto">
                            <table style="border:1px solid black;border-collapse:collapse; vertical-align:center;  ">
                                <tr class="table" style="border:1px solid black;border-collapse:collapse;">
                                    <td class="table">Type reclamation</td>
                                    <td class="table">Date reclamation</td>
                                    <td class="table">Etat reclamation</td>
                                    <td class="table">Description reclamation</td>
                                    <td class="table">Nom Utilisateur</td>
                                </tr>
                                {% for k in formBackRec %}
                                <tr style="border:1px solid black;border-collapse:collapse; vertical-align:center; text-align:center;">
                                    <td style="font-size: 15px;">{{ k.getTypeRec() }}</td>
                                    <td style="font-size: 15px;">{{ k.getDateRec |date('d-m-Y') }}</td>
                                    <td style="font-size: 15px;">{{ k.getEtatRec }}</td>
                                    <td style="font-size: 15px;">{{ k.getDescRec}}</td>
                                    <td style="font-size: 15px;">{{ k.getNomU }}</td>
{#  #}
                                    <td>
                                        <form action="{{ path('traite',{'id':k.getId()}) }}">
                                            <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
                                                    style="height: 35px; padding: 6px 15px; ">traité</button>
                                        </form>
                                    </td>

                                    {% endfor %}
                                </tr>
                            </table>
                        </div>
                    </td>
                </table>
            </div>

        </div>
    </div>

{% endblock %}
