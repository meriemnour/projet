{% extends 'base_front.html.twig' %}

{% block title %}Food-X - Connexion{% endblock %}

{% block carousel %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('message') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

     <!-- Quote Start -->
    <div class="container-fluid bg-light overflow-hidden my-5 px-lg-0">
        <div class="container quote px-lg-0">
            <div class="row g-0 mx-lg-0">
                <div class="col-lg-6 ps-lg-0" style="min-height: 400px;">
                    <div class="position-relative h-100">
                        <img class="position-absolute img-fluid w-100 h-100" src="{{ asset('FrontOffice/img/pizza.jpg') }}" style="object-fit: cover;" alt="">
                    </div>
                </div>
                <div class="col-lg-6 quote-text py-5 wow fadeIn" data-wow-delay="0.5s">
                    <div class="p-lg-5 pe-lg-0">
                        <div class="">
                            <h3 class="display-5 mb-4" style="color: #1c294e">Mot de passe oubli√©e</h3>
                        </div>
                        <div class="">
                            <h5  style="color: #1c294e">Entrez votre adresse email valide pour le reset</h5>
                        </div>

                        {{ form_start(emailForm , {'attr':{'novalidate':'novalidate'}}) }}
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Email</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            {{ form_widget(emailForm.email_u) }}
                                        </div>
                                        <div style="color: red">
                                            {{ form_errors(emailForm.email_u) }}
                                        </div>
                                    </div>



                                </div>
                            </div>
                        </div>
                        {{ form_end(emailForm) }}





                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Quote End -->

{% endblock %}