                    </div>
                    <div class="col-sm-9 text-secondary">
                        {{ form_widget(formAddU.role) }}
                    </div>
                    <div style="color: red">
                        {{ form_errors(formAddU.role) }}
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Mot de passe</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        {{ form_widget(formAddU.mot_de_passe) }}
                    </div>
                    <div style="color: red">
                        {{ form_errors(formAddU.mot_de_passe) }}
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Confirmer mot de passe</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        {{ form_widget(formAddU.confirme_mot_de_passe) }}
                    </div>
                    <div style="color: red">
                        {{ form_errors(formAddU.confirme_mot_de_passe) }}
                    </div>
                </div>



            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
                    style="height: 45px; padding: 10px 15px; background-color: #1c294e ">Ajouter</button>
        </div>
    </div>
    {{ form_end(formAddU) }}
</div>
{% endblock %}
