{% extends 'base_back.html.twig' %}

{% block title %}Food-X - ajouter utilisateur{% endblock %}

{% block body %}
<div class="grix xs4 container">
    {{ form_start(formAddU , {'attr':{'novalidate':'novalidate'}}) }}
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">CIN</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
