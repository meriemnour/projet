                    </div>
                    <div class="col-sm-9 text-secondary">
                        {{ form_widget(formAddU.num_tel) }}
                    </div>
                    <div style="color: red">
                        {{ form_errors(formAddU.num_tel) }}
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
